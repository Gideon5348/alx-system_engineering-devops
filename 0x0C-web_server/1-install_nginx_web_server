#!/usr/bin/env bash
# This script installs and configures nginx on a new Ubuntu machine.

# Update package list and install nginx with the -y flag
apt-get update
apt-get install -y nginx

# Create a simple HTML page with the content "Hello World!"
echo "Hello World!" > /var/www/html/index.html

# Restart nginx without using systemctl
/etc/init.d/nginx restart

# Check if nginx is listening on port 80
netstat -tnl | grep ':80 ' > /dev/null
if [ $? -eq 0 ]; then
    echo "Nginx is listening on port 80."
else
    echo "Error: Nginx is not listening on port 80."
fi